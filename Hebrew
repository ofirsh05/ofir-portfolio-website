  <script>
    // Tab switching logic
    function showSection(sectionId, buttonEl) {
      document.querySelectorAll('.content-section').forEach(s => {
        s.classList.remove('active');
      });
      document.getElementById(sectionId).classList.add('active');
      
      document.querySelectorAll('.section-tab-new').forEach(t => t.classList.remove('active'));
      buttonEl.classList.add('active');
      
      updateIndicator(buttonEl);
    }

    function updateIndicator(btn) {
      const indicator = document.getElementById('active-tab-indicator');
      const wrapper = document.querySelector('.tabs-wrapper');
      const btnRect = btn.getBoundingClientRect();
      const wrapRect = wrapper.getBoundingClientRect();
      
      indicator.style.width = btnRect.width + 'px';
      indicator.style.right = (wrapRect.right - btnRect.right) + 'px'; // Adjusted for RTL
      indicator.style.top = (btnRect.bottom - wrapRect.top) + 'px';
    }

    // Lightbox
    function openLightbox(src) {
      document.getElementById('lightbox-img').src = src;
      document.getElementById('lightbox').classList.add('open');
      document.body.style.overflow = 'hidden';
    }
    function closeLightbox() {
      document.getElementById('lightbox').classList.remove('open');
      document.body.style.overflow = '';
    }

    // Initialize indicator position
    window.onload = () => {
      const activeTab = document.querySelector('.section-tab-new.active');
      if (activeTab) updateIndicator(activeTab);
    };
  </script>
